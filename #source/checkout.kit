<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/slick.css">
    <link rel="stylesheet" href="css/style.css">    


    <title>Womazing</title>
</head>

<body>
    <div class="wrapper">

        <!-- @import "html/header.html" -->
        <!--header-->


        <main class="main">
            <section class="checkout">
                <div class="container">
                    <div class="checkout__inner">
                        <div class="checkout__top">
                            <h1 class="checkout__title title-big">Оформлення замовлення</h1>
                            <div class="bread-crumbs">
                                <a href="index.html">Головна</a><a href="shop.html">Оформлення замовлення</a>
                            </div>
                        </div>

                        <form action="#" class="checkout__form">
                            <div class="checkout__form-colum">

                                <div class="checkout__form-user">
                                    <div class="form__title checkout__title1">Дані покупця</div>
                                    <input tabindex="1" name="form-user__name" type="text"
                                        class="form-user__name form__input-style" placeholder="Ім'я">
                                    <input tabindex="2" name="form-user__email" type="email"
                                        class="form-user__email form__input-style" placeholder="E-mail">
                                    <input tabindex="3" name="form-user__phone" type="tel"
                                        class="form-user__phone form__input-style" placeholder="Телефон">
                                </div>

                                <div class="checkout__form-address">
                                    <div class="form__title checkout__title1">Адреса одержувача</div>
                                    <input tabindex="4" name="form-address__country" type="text"
                                        class="form-address__country form__input-style" placeholder="Країна">
                                    <input tabindex="5" name="form-address__city" type="text"
                                        class="form-address__city form__input-style" placeholder="Місто">
                                    <input tabindex="6" name="form-address__street" type="text"
                                        class="form-address__street form__input-style" placeholder="Вулиця">
                                    <input tabindex="7" name="form-address__house" type="text"
                                        class="form-address__house form__input-style" placeholder="будинок">
                                    <input tabindex="8" name="form-address__flat" type="text"
                                        class="form-address__flat form__input-style" placeholder="Квартира">
                                </div>

                                <div class="checkout__form-comment">
                                    <div class="form__title checkout__title1">Коментарі</div>
                                    <textarea tabindex="9" name="form-comment" class="form-comment form__textarea-style"
                                        placeholder="Коментар"></textarea>
                                </div>
                            </div>

                            <div class="checkout__form-colum">
                                <div class="checkout__info">
                                    <div class="form__title checkout__title1">Ваше замовлення</div>
                                    <div class="checkout__goods-text checkout__info-item">
                                        <span>Товар</span><span>Усього</span>
                                    </div>
                                    <div class="checkout__goods checkout__info-item"><span>Футболка
                                            USA</span><span>$129</span></div>
                                    <div class="checkout__subtotal checkout__info-item">
                                        <span>Підсумок</span><span>$129</span>
                                    </div>
                                    <div class="checkout__total checkout__info-item"><span>Разом</span><span>$129</span>
                                    </div>
                                </div>
                                <div class="checkout__payment">
                                    <div class="form__title checkout__title1">Способи оплати</div>
                                    <input tabindex="9" name="checkout__payment-checkbox" type="checkbox"
                                        class="checkout__payment-checkbox"><span>Оплата
                                        готівкою</span>
                                </div>
                                <button tabindex="10" name="checkout__form-btn" type="submit"
                                    class="checkout__form-btn btn">Розмістити замовлення</button>
                            </div>
                        </form>
                    </div>

                </div>
            </section>
        </main>


        <!-- @import "html/footer.html" -->
        <!--footer-->  

    </div>
<!--wrapper-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="js/slick.min.js"></script>
    <script src="js/main.js"></script>
</body>

</html>