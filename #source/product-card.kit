<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/slick.css">
    <link rel="stylesheet" href="css/style.css">

    <title>Womazing</title>
</head>

<body>
    <div class="wrapper">

        <!-- @import "html/header.html" -->
        <!--header-->


        <main class="main">
            <section class="product">
                <div class="container">
                    <div class="product__inner">


                        <div class="product__top">
                            <h1 class="product__title title-big">Світшот Sweet Shot</h1>
                            <div class="bread-crumbs">
                                <a href="index.html">Головна</a><a href="shop.html">Світшот</a><a
                                    href="shop.html">Світшот Sweet Shot</a>
                            </div>
                        </div>
                        <!-- product__top -->

                        <div class="product__body">
                            <div class="product__item">
                                <div class="product-item__img">
                                    <img src="img/collection-img3.png" alt="">
                                </div>
                                <!-- product__item-img -->
                                <div class="product-item__info">
                                    <div class="product-item__price">$311<span>$450</span></div>
                                    <!-- product__item-price -->
                                    <div class="product-item__size one">
                                        <div class="product-item__size-title">Виберіть розмір</div>
                                        <div class="product-item__size-btn btn2">s</div>
                                        <div class="product-item__size-btn btn2 active">m</div>
                                        <div class="product-item__size-btn btn2">l</div>
                                        <div class="product-item__size-btn btn2">xl</div>
                                        <div class="product-item__size-btn btn2">xxl</div>
                                    </div>
                                    <!-- product__item-size -->
                                    <div class="product-item__color-title">Виберіть колір</div>
                                    <div class="product-item__color">
                                        <div class="product-item__color-item"></div>
                                        <div class="product-item__color-item"></div>
                                        <div class="product-item__color-item"></div>
                                        <div class="product-item__color-item"></div>
                                    </div>
                                    <!-- product__item-color -->
                                    <div class="product-item__btn-box">
                                        <div class="product-item__btn-number btn1">1</div>
                                        <div class="product-item__btn btn">Додати до кошику</div>
                                    </div>
                                    <!-- product__item-btn -->
                                </div>
                                <!-- product__item-info -->
                            </div>
                            <!-- product__item -->

                            <div class="product__similar">
                                <div class="product-similar__title">Схожі товари</div>
                                <div class="collection__items">
                                    <div class="collection__item">
                                        <a href="shop.html" class="collection-item__img">
                                            <img src="img/collection-img1.png" alt="collection-img">
                                        </a>
                                        <a href="shop.html" class="collection-item__title">Футболка США</a>
                                        <div class="collection-item__prise"><span>$229</span>$129</div>
                                    </div>
                                    <!-- collection__item -->
                                    <div class="collection__item">
                                        <a href="shop.html" class="collection-item__img">
                                            <img src="img/collection-img2.png" alt="collection-img">
                                        </a>
                                        <a href="shop.html" class="collection-item__title">Купальник Glow</a>
                                        <div class="collection-item__prise">$129</div>
                                    </div>
                                    <!-- collection__item -->

                                </div>
                                <!-- collection__items -->
                            </div>
                            <!-- product__similar -->
                        </div>
                        <!-- product__body -->
                    </div>
                    <!-- product__inner -->
                </div>
                <!-- container -->
            </section>
            <!-- product -->
        </main>

        <!-- @import "html/footer.html" -->
        <!--footer-->  

    </div>
<!--wrapper-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="js/slick.min.js"></script>
    <script src="js/main.js"></script>
</body>

</html>